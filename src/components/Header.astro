<style>
	.header {
		position: fixed;
		width: 100%;
		background: rgba(19, 21, 26, 0.7);
		backdrop-filter: blur(20px) saturate(180%);
		display: flex;
		justify-content: center;
		align-items: center;
		height: 60px;
		padding-bottom: 5px;
		/* padding: 10px; */
		/* margin-left: -28px; */
		/* margin-top: -100px; */
		box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.2);
		z-index: 2;
	}

	ul{
		display: flex;
		align-content: center;
	}

	li {
		display: inline-block;
		padding: 0 20px;
	}

	a {
		position: relative;
		font-size: 700;
		color: white;
		font-weight: 500;
		text-decoration: none;
		/* margin-left: 20px; */
		transition: 0.475s;
	}
	a:hover {
		color: rgba(99, 88, 238, 1);
		/* background: linear-gradient(
      82.3deg,
      rgba(150, 93, 233, 1) 10.8%,
      rgba(99, 88, 238, 1) 94.3%
    ); */
	}
	a::after {
		content: "";
		position: absolute;
		left: 0;
		bottom: -10px;
		width: 0%;
		height: 2px;
		background: rgba(150, 93, 233, 1);
		transition: 0.475s;
	}

	a:hover::after {
		width: 100%;
		background: rgba(99, 88, 238, 1);
	}

	img {
		width: 0;
		color: white;
	}

	@media screen and (max-height: 368px) {
	}

