    .container_sobre_mi {
        view-timeline-name: --tarjetaLeft;
        view-timeline-axis: block;

        animation-timeline: --tarjetaLeft;
        animation-name: slideInLeft;
        animation-range: entry 20% cover 45%;
        animation-fill-mode: both;
    }

    .container_educacion {
        view-timeline-name: --tarjetaRight;
        view-timeline-axis: block;

        animation-timeline: --tarjetaRight;
        animation-name: slideInRight;
        animation-range: entry 20% cover 45%;
        animation-fill-mode: both;
    }

    @media (max-width: 1280px) {
        .div2 {
            flex-direction: column;
            padding: 5%;
        }

        @keyframes show {
            from {
                opacity: 0;
                scale: 50%;
            }

            to {
                opacity: 1;
                scale: 100%;
            }
        }

        .container_sobre_mi {
