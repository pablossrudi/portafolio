        margin-bottom: -5px;
    }

    .worldwide-location {
        margin-bottom: -3px;
    }

    .chile_icon {
        margin-bottom: -4px;
        margin-left: 2px;
    }

    .container_educacion {
        display: grid;
        width: 45%;
        /* opacity: 0; 
        transform: translateX(-10%);
        animation-duration: 1s;
        animation-fill-mode: forwards; */
    }

    @keyframes slideInLeft {
        from {
            transform: translateX(-20%);
